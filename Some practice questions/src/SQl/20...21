SELECT ID
FROM subject
WHERE Phy = (SELECT MAX(Phy) FROM subject);

SELECT ID
FROM subject
WHERE (phy + chem + math + bio) = (SELECT MAX(phy + chem + math + bio) FROM subject);


SELECT ID, Phy, Chem, Maths, bio, (Phy + Chem + Maths + bio) AS TotalScore
FROM subject
ORDER BY TotalScore ASC;

SELECT ID, Maths
FROM subject
ORDER BY Maths DESC
LIMIT 1 OFFSET 1;








